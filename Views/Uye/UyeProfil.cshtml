@model mvcBlog.Models.Uye

@{
    ViewBag.Title = "UyeProfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Üye Profil Sayfası </h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Yetki.Yetki1)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Yetki.Yetki1)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AdSoyad)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AdSoyad)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Foto)
        </dt>

        <dd>
            <img src="@Model.Foto" width="75" class="img-circle img-responsive" alt="@Model.AdSoyad" />
        </dd>

    </dl>
</div>
<h4>Yazarın Yazmış olduğu Makaleler </h4>
<div class="row">
    <ul>
        @foreach (var item in Model.Makales.OrderByDescending(m => m.MakaleId).Take(5))
        {
            <li><a href="/Home/MakaleDetay/@item.MakaleId">@item.Baslik</a></li>
        }
    </ul>
</div>